<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        
        <!-- Box Start -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android1="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prefs_reset"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Reset Application"
                    android:background="#1f2044"
                    android:textColor="#ffffff"
                    style="@style/ScaleFontLarge" />

                <Button
                    android:id="@+id/toggle_reset"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:contentDescription="Reset Application"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Reset"
                    style="@style/ScaleFontLarge"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>
        <!-- Box End -->
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="0" />

        <!-- Box Start -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android1="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prefs_welcomemessage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Welcome Message"
                    android:background="#1f2044"
                    android:textColor="#ffffff"
                    style="@style/ScaleFontLarge" />

                <ToggleButton
                    android:id="@+id/toggle_welcome"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:contentDescription="Welcome Message"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOff="Off"
                    android:textOn="On"
                    style="@style/ScaleFontLarge"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>
        <!-- Box End -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="0" />

        <!-- Box Start -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android1="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prefs_reminders"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Daily Reminders"
                    android:background="#1f2044"
                    android:textColor="#ffffff"
                    style="@style/ScaleFontLarge" />

                <ToggleButton
                    android:id="@+id/toggle_reminders"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:contentDescription="Daily Reminders"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOff="Off"
                    android:textOn="On"
                    style="@style/ScaleFontLarge"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>
        <!-- Box End -->

<TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="0" />
        
        <!-- Box Start -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android1="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prefs_settime"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Remind me at:"
                    android:background="#1f2044"
                    android:textColor="#ffffff"
                    style="@style/ScaleFontLarge" />

                <Button
                    android:id="@+id/toggle_setrtime"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:contentDescription="Set Reminder time"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Set"
                    style="@style/ScaleFontLarge"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>
        <!-- Box End -->
        
<TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="0" />

        <!-- Box Start -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android1="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prefs_data_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Anonymous Data"
                    android:background="#1f2044"
                    android:textColor="#ffffff"
                    style="@style/ScaleFontLarge" />

                <ToggleButton
                    android:id="@+id/toggle_anondata"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:contentDescription="Anonymous data"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOff="Off"
                    android:textOn="On"
                    style="@style/ScaleFontLarge"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>
        <!-- Box End -->
        
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dip"
            android:layout_weight="0" />
        
        <!-- Box Start -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:android1="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:android1="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prefs_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Send Feedback"
                    android:background="#1f2044"
                    android:textColor="#ffffff"
                    style="@style/ScaleFontLarge" />

                <Button
                    android:id="@+id/toggle_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:contentDescription="Send Feedback"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Feedback"
                    style="@style/ScaleFontLarge"
                    android:textColor="#000000" />
            </LinearLayout>

            <TextView
                android:layout_width="10dip"
                android:layout_height="fill_parent"
                android:layout_weight="0" />
        </LinearLayout>
        <!-- Box End -->
        
</LinearLayout>



    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        layout="@layout/main_menu" />
</LinearLayout>